<?xml version="1.0" encoding="utf-8" ?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
  <item android:state_pressed="true">
 
      <shape>
        <solid
            android:color="@color/my_orange_opecity" />
        <stroke
            android:width="1dp"
        android:color="@color/my_orange_opecity" />
        <padding
            android:left="10dp"
            android:top="10dp"
            android:right="10dp"
            android:bottom="10dp" />
      </shape>
  </item>
  <item>
    <shape>
      <gradient
          android:startColor="@color/back_white"
          android:endColor="@color/back_white"
          android:angle="270" />
      <stroke
          android:width="1dp"
          android:color="@color/back_white" />
    </shape>
  </item>
</selector>