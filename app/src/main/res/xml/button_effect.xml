<?xml version="1.0" encoding="utf-8" ?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

  <item android:state_pressed="true">


    <shape>
      <solid
          android:color="@color/back_white" />
      <stroke
          android:width="2dp"
          android:color="@color/font_heading1_color"/>
      <corners
          android:radius="2dp" />
      <padding
          android:left="2dp"
          android:top="2dp"
          android:right="2dp"
          android:bottom="2dp" />
    </shape>
  </item>
  <item>
    <shape>
      <gradient
          android:startColor="@color/my_orange"
          android:endColor="@color/my_orange"
          android:angle="270" />
      <stroke

          android:width="2dp"
          android:color="@color/my_orange" />
      <corners
          android:radius="2dp" />

      <padding
          android:left="2dp"
          android:top="2dp"
          android:right="2dp"
          android:bottom="2dp" />
    </shape>
  </item>
</selector>