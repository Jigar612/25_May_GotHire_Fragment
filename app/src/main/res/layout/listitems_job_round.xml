<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/linear_select_interview_breakdown"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="100"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:background="@xml/list_item_selector">
        <!--<LinearLayout-->
            <!--android:layout_width="0dp"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_weight="18">-->
            <!--<ImageView-->
                <!--android:id="@+id/img_cpy_logo_interview_breakdown_listitem"-->
                <!--android:layout_width="55dp"-->
                <!--android:layout_height="55dp"-->
                <!--android:background="@drawable/ic_2"/>-->
        <!--</LinearLayout>-->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="100">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="100">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="60">
                    <TextView
                        android:id="@+id/tv_job_nm_interview_breakdown_listitem"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="MARKETING MANAGER"
                        android:textSize="@dimen/textSize_SmallHeading"
                        android:textColor="@color/font_heading2_color" />
                    <!--<TextView-->
                        <!--android:id="@+id/tv_cpy_nm_interview_breakdown_listitem"-->
                        <!--android:layout_width="match_parent"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:text="Google inc."-->
                        <!--android:textSize="@dimen/textSize"-->
                        <!--android:textColor="@color/font_normal" />-->
                    <TextView
                        android:id="@+id/tv_round_status"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/textSize"
                        android:textColor="@xml/text_selector" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linear_ramining_time"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="40">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_weight="40">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/textSize"
                            android:textColor="@color/font_normal"
                            android:text="Time Remaining"/>
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center">
                            <TextView
                                android:id="@+id/tv_remain_days_interview_breakdown_listitem"
                                android:text="0"
                                android:textSize="@dimen/textSize_SmallHeading"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center_horizontal"
                                android:textColor="@xml/text_selector"
                                android:layout_marginRight="5dp" />
                            <TextView
                                android:id="@+id/tv_days_disp_interview_breakdown_listitem"
                                android:text="DAYS"
                                android:textSize="10dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center_horizontal"
                                android:textColor="@xml/text_selector"
                                android:layout_marginRight="10dp" />
                            <TextView
                                android:id="@+id/tv_remain_time_interview_breakdown_listitem"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="00:00"
                                android:textSize="@dimen/textSize_SmallHeading"
                                android:gravity="center_horizontal"
                                android:textColor="@xml/text_selector" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <!--<LinearLayout-->
            <!--android:orientation="vertical"-->
            <!--android:id="@+id/linear_color_status"-->
            <!--android:layout_width="10dp"-->
            <!--android:layout_height="match_parent"/>-->
    </LinearLayout>

</LinearLayout>