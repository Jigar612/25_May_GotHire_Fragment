    <!--</LinearLayout>-->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/linear_to_btn_Date">
        <Button
            android:id="@+id/btn_to_date"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:layout_marginRight="3dp"
            android:textSize="14dp"
            android:textColor="@xml/button_textcolor_selector"
            android:background="@drawable/calendar" />
        <EditText
            android:id="@+id/edittext_to_date"
            android:layout_width="match_parent"
            android:paddingLeft="10dp"
            style="@style/EditTextTheme"
            android:background="@xml/edittext_effect"
            android:editable="false" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/linear_msg_to_date">
        <TextView
            android:id="@+id/txt_msg_date1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:textColor="@color/font_normal" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/linear_date_validation">
        <TextView
            android:id="@+id/txt_cal_validation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:visibility="gone"
            android:textColor="@color/font_normal" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linear_rating"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tv_disp_poor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="1-POOR"/>
            <TextView
                android:id="@+id/tv_disp_excelent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10-EXCELLENT"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"/>
            <LinearLayout
                android:id="@+id/linear_seekbar_2"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_gravity="center">

                <com.xw.repo.BubbleSeekBar
                    android:id="@+id/seekbar_rating_singlequestion"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    app:bsb_bubble_color="@color/my_orange"
                    app:bsb_bubble_text_color="@color/white"
                    android:maxHeight="15dp"
                    android:minHeight="15dp"
                    app:bsb_second_track_color="@color/button_back_blude"
                    app:bsb_track_color="@color/button_back_blude"
                    app:bsb_always_show_bubble="false"
                    app:bsb_section_text_position="bottom_sides"
                    app:bsb_show_section_text="true"
                    app:bsb_show_thumb_text="true"
                    />
                <!--<LinearLayout-->
                    <!--android:id="@+id/linear_min_max_display"-->
                    <!--android:orientation="horizontal"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:weightSum="100">-->
                    <!--<TextView-->
                        <!--android:id="@+id/tv_disp_minVal_seekbar_singleQue"-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_weight="50"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:gravity="left"-->
                        <!--android:textColor="@color/my_dark_font"/>-->
                    <!--<TextView-->
                        <!--android:id="@+id/tv_disp_maxVal_seekbar_singleQue"-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_weight="50"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:gravity="right"-->
                        <!--android:textColor="@color/my_dark_font"/>-->
                <!--</LinearLayout>-->
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linear_ranking"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <LinearLayout
            android:id="@+id/linear_dragList"
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:gravity="center">
            <com.lunger.draglistview.DragListView
                android:id="@+id/dragListView_singlequestion"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/linear_button"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="10">

            <Button
                android:id="@+id/btn_SingleQuestion_submit"
                android:layout_width="120dp"
                android:layout_height="35dp"
                android:layout_marginLeft="15dp"
                android:textColor="@xml/button_textcolor_selector"
                android:background="@xml/button_effect"
                android:visibility="gone"
                android:text="SUBMIT"/>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>