<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linear_main_single_que"
    android:orientation="vertical"
    android:paddingLeft="14dp"
    android:paddingRight="14dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linear_quesstion_disp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="15dp"
        android:paddingTop="5dp">
    <TextView
        android:id="@+id/tv_quesround_pos_adapter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/font_heading2_color"
        android:textSize="16dp"
        />
    <TextView
        android:id="@+id/tv_quesround_que_adapter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/font_heading2_color"
        android:textSize="16dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="19dp"
        android:id="@+id/linear_opt" />

    <!--android:focusable="true"-->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:id="@+id/linear_desc">
        <EditText
            android:id="@+id/txt_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/DescTextTheme"
            android:padding="4dp"
            android:inputType="textMultiLine"
            android:minHeight="300dp"
            android:paddingLeft="8dp"
            android:paddingRight="5dp"
            android:gravity="top|left"
            android:scrollbars="vertical"
            android:background="@xml/editbox_rounded_effect"
            android:textSize="19dp" />
        <!--fontPath="Fonts/HelveticaNeue.ttf"-->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="100"
            android:id="@+id/linear_desc_msg_validation">
            <TextView
                android:id="@+id/txt_msg_desc"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="70"
                android:textSize="12dp"
                android:textColor="@color/font_normal" />
            <TextView
                android:id="@+id/txt_desc_validtion"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="30"
                android:layout_gravity="right"
                android:textSize="12dp"
                android:textColor="@color/font_normal" />
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:id="@+id/linear_multiselect" />
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:id="@+id/linear_multiselect_msg" />
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:id="@+id/linear_file">
        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:textColor="@xml/button_textcolor_selector"
            android:background="@mipmap/ic_file_upload1"
            android:id="@+id/btn_file_upload" />
        <TextView
            android:id="@+id/tv_disp_file_uplod"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:gravity="center"
            android:text="Upload File"
            android:textColor="@color/my_sky_dark" />
        <TextView
            android:id="@+id/txt_file_validation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:gravity="center"
            android:textColor="@color/font_normal" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linear_file_msg">
        <TextView
            android:id="@+id/txt_msg_file"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:textSize="14dp"
            android:textColor="@color/my_dark_font" />
    </LinearLayout>
    <LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="1dp"
    android:background="@color/back_white"
    android:id="@+id/linear_video">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="10dp"
        android:id="@+id/linear_viedeo_view">
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linear_video_msg">
        <!--orange-->
        <TextView
            android:id="@+id/txt_video_response_disp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:text="VIDEO RESPONSE REQUIRED"
            android:gravity="center"
            android:textColor="@color/my_orange" />
        <!--normal-->
        <TextView
            android:id="@+id/tv_minimum_req_disp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:gravity="center"
            android:text="Minimum recording time required:"
            android:layout_marginTop="15dp"
            android:textColor="@color/font_normal" />
        <TextView
            android:id="@+id/txt_minimum_req"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:gravity="center"
            android:text="00:00:00"
            android:textColor="@color/my_orange" />
        <TextView
            android:id="@+id/tv_max_req_disp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:gravity="center"
            android:text="Maximum time allowed to record:"
            android:layout_marginTop="15dp"
            android:textColor="@color/font_normal" />
        <TextView
            android:id="@+id/txt_max_req"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:gravity="center"
            android:text="00:00:00"
            android:textColor="@color/my_orange" />
        <TextView
            android:id="@+id/txt_no_retake_disp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:gravity="center"
            android:text="No Retakes!"
            android:layout_marginTop="15dp"
            android:textColor="@color/font_normal" />
        <Button
            android:id="@+id/btn_go_to_video_ans"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_gravity="center"
            android:clickable="true"
            android:layout_marginTop="42dp"
            android:background="@drawable/ic_rec_cem"/>

        <TextView
            android:id="@+id/txt_st_rec_disp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textStyle="bold"
            android:gravity="center"
            android:text="START \n RECORDING"
            android:textColor="@color/my_orange" />
        <TextView
            android:id="@+id/txt_msg_video"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:text=""
            android:gravity="center"

            android:textColor="@color/my_orange" />
    </LinearLayout>
</LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="1dp"
        android:id="@+id/linear_dropdown">
        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:spinnerMode="dropdown"
            android:paddingLeft="3dp"
            android:id="@+id/spinner_dropdown"
            android:background="@xml/spinner_bg" />
    </LinearLayout>
    <!--<LinearLayout-->
        <!--android:orientation="horizontal"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--android:layout_marginBottom="4dp"-->
        <!--android:id="@+id/linear_from_btn_Date">-->
        <!--<Button-->
            <!--android:id="@+id/btn_from_Date"-->
            <!--android:layout_width="46dp"-->
