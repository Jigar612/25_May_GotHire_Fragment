<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:gravity="center_vertical"
    android:background="@drawable/login_back2">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:paddingLeft="1dp"
        android:paddingRight="15dp"
        android:background="@color/login_back_shadow"
        android:orientation="vertical">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="80dp"
        android:paddingRight="8dp"
        android:background="@color/back_white"
        android:gravity="center">
        <ImageView
            android:layout_centerVertical="true"
            android:src="@drawable/logo_new"
            android:layout_width="180dip"
            android:layout_height="60dip"
            android:id="@+id/img_logo"
            android:layout_gravity="right"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/liner_fb"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp">
        <!--<Button-->
        <!--android:id="@+id/btn_loginWith_fb"-->
        <!--android:layout_width="180dp"-->
        <!--android:layout_height="35dp"-->
        <!--android:textStyle="normal"-->
        <!--android:background="@drawable/bg_fb"/>-->
        <!--<TextView-->
        <!--android:id="@+id/tv_status"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content" />-->
        <com.facebook.login.widget.LoginButton
            android:id="@+id/btn_loginWith_fb"
            android:paddingTop="8dp"
            android:gravity="center"

            android:paddingBottom="9dp"
            android:layout_height="39dp"
            android:layout_width="200dp"
            android:fontFamily="fonts/Roboto-Light"
            android:textStyle="normal"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/linear_email"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp">
        <Button
            android:id="@+id/btn_signUp_email"
            android:layout_width="200dp"
            android:layout_height="43dp"
            android:text="Sign up with Email"
            android:fontFamily="fonts/Roboto-Light"
            android:textColor="@color/font_heading1_selected"
            android:textAllCaps="false"/>
        <!--android:textColor="@color/menu_dark_font2"-->
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linear_signin"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp">
        <Button
            android:id="@+id/btn_signin"
            android:layout_width="200dp"
            android:layout_height="33dp"
            android:clickable="true"
            android:background="@xml/button_effect"
            android:textColor="@xml/button_textcolor_selector"
            android:fontFamily="fonts/Roboto-Light"
            android:textAllCaps="false"
            android:text="Sign In"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="15dp">

        <TextView
            android:id="@+id/tv_disp_privacy_policy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="18"
            android:text="@string/terms_condition"
            android:textSize="@dimen/textSize_terms_condition" />
    </LinearLayout>
</LinearLayout>
</LinearLayout>
