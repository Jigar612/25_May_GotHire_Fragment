<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/back_white">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:gravity="center">
        <ImageView
            android:layout_width="45dp"
            android:layout_height="35dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/ic_interview_title"/>
        <TextView
            android:id="@+id/tv_heading"
            android:text="INTERVIEW BRIEF"
            android:textSize="18dp"
            android:textColor="@color/font_heading2_color"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_gravity="center" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/my_dark_border"/>
    </LinearLayout>
    <ScrollView android:id="@+id/scroll1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingRight="5dip"
        xmlns:android="http://schemas.android.com/apk/res/android">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp">
                <TextView
                    android:id="@+id/tv_stage_nm_interview_brief"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/font_heading2_color"/>
                <TextView
                    android:id="@+id/tv_instruction_interivew_brief"
                    android:text="This stage will be used to asses your interpersoanl and communication skills.  At this stage will be used to asses your interpersoanl and communication skills. "
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="left"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/font_normal"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center">
                <TextView
                    android:id="@+id/tv_queround_msg_leftTime"
                    android:text="DURATION OF THE INTERVIEW"
                    android:textSize="16dp"
                    android:textColor="@color/font_normal"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:textStyle="bold" />
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">
                    <TextView
                        android:id="@+id/tv_queround_remain_days"
                        android:text="0"
                        android:textSize="23dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:textColor="@color/my_orange"
                        android:layout_marginRight="5dp" />
                    <TextView
                        android:id="@+id/tv_queround_days_disp"
                        android:text="DAYS"
                        android:textSize="12dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:textColor="@color/my_orange"
                        android:layout_marginRight="10dp" />
                    <TextView
                        android:id="@+id/tv_queround_remain_minute"
                        android:text="00:00:00"
                        android:textSize="23dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:textColor="@color/my_orange" />
                </LinearLayout>
                <TextView
                    android:id="@+id/txt_over_time"
                    android:textSize="17dp"
                    android:layout_width="wrap_content"
                    android:textColor="@color/my_orange"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="5dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:layout_gravity="center">
                <TextView
                    android:id="@+id/tv_question_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="QUESTION TYPES INCLUDED:"
                    android:textSize="@dimen/textSize"
                    android:textColor="@color/font_heading2_color"
                    android:layout_marginBottom="5dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="100">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_weight="50">
                        <Button
                            android:id="@+id/btn_video_interview_brief"
                            android:layout_width="150dp"
                            android:layout_height="40dp"
                            android:textColor="@color/font_white"
                            android:background="@color/back_darkLight_ranking"
                            android:text="VIDEO "/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_weight="50">
                        <Button
                            android:id="@+id/btn_multi_choice_interview_brief"
                            android:layout_width="150dp"
                            android:layout_height="40dp"
                            android:textColor="@color/font_white"
                            android:background="@color/back_darkLight_ranking"
                            android:text="MULTIPLE \nCHOICE "/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:weightSum="100">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_weight="50">
                        <Button
                            android:id="@+id/btn_rating_interview_brief"
                            android:layout_width="150dp"
                            android:layout_height="40dp"
                            android:textColor="@color/font_white"
                            android:background="@color/back_darkLight_ranking"
                            android:text="RATING "/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_weight="50">
                        <Button
                            android:id="@+id/btn_ranking_interview_brief"
                            android:layout_width="150dp"
                            android:layout_height="40dp"
                            android:textColor="@color/font_white"
                            android:background="@color/back_darkLight_ranking"
                            android:text="RANKING"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:weightSum="100">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_weight="50">
                        <Button
                            android:id="@+id/btn_yes_no_interview_brief"
                            android:layout_width="150dp"
                            android:layout_height="40dp"
                            android:textColor="@color/font_white"
                            android:background="@color/back_darkLight_ranking"
                            android:text="YES / NO "/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_weight="50">
                        <Button
                            android:id="@+id/btn_file_upload_interview_brief"
                            android:layout_width="150dp"
                            android:layout_height="40dp"
                            android:textColor="@color/font_white"
                            android:background="@color/back_darkLight_ranking"
                            android:text="FILE \nUPLOAD"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:weightSum="100">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_weight="50">
                        <Button
                            android:id="@+id/btn_open_ended_interview_brief"
                            android:layout_width="150dp"
                            android:layout_height="40dp"
                            android:textColor="@color/font_white"
                            android:background="@color/back_darkLight_ranking"
                            android:text="OPEN \nENDED "/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_weight="50">
                        <Button
                            android:id="@+id/btn_date_time_interview_brief"
                            android:layout_width="150dp"
                            android:layout_height="40dp"
                            android:textColor="@color/font_white"
                            android:background="@color/back_darkLight_ranking"
                            android:text="DATE /TIME"/>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:gravity="center"
                android:padding="5dp">
                <ImageView
                    android:id="@+id/image_notes"
                    android:layout_width="40dp"
                    android:layout_height="25dp"
                    android:layout_marginRight="4dp"
                    android:background="@drawable/ic_note" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="9dp"
                    android:layout_gravity="top"
                    android:text="@string/Note_heading"/>
                <TextView
                    android:id="@+id/note"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="@string/note_QuestiorRound" />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="2dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="left"
                    android:paddingRight="10dp">
                    <Button
                        android:id="@+id/btn_back_que_round"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:background="@color/white"
                        android:paddingRight="5dp"
                        android:drawableRight="@mipmap/ic_back_button" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">
                    <Button
                        android:id="@+id/btn_submit_round"
                        android:layout_width="120dp"
                        android:layout_height="35dp"
                        android:textColor="@xml/button_textcolor_selector"
                        android:background="@xml/button_effect_sky"
                        android:text="Submit Stage"/>

                    <Button
                        android:id="@+id/btn_start_now_que_round"
                        android:layout_width="120dp"
                        android:layout_height="35dp"
                        android:layout_marginLeft="10dp"
                        android:textColor="@xml/button_textcolor_selector"
                        android:background="@xml/button_effect"
                        android:text="START NOW"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>