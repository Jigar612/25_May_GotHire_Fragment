<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:gravity="center_vertical"
    android:background="@drawable/login_back">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:paddingLeft="3dp"
        android:paddingRight="5dp"
        android:background="@color/login_back_shadow"
        android:orientation="vertical">
    <ScrollView
        android:id="@+id/scroll1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingRight="5dip"
        android:scrollbars="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="140dp"

                android:background="@color/back_white"
                android:paddingRight="10dp"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_logo"
                    android:layout_width="200dip"
                    android:layout_height="55dip"
                    android:layout_centerVertical="true"
                    android:layout_gravity="right"
                    android:src="@drawable/logo_new" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/liner_fb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:orientation="vertical">

                <com.facebook.login.widget.LoginButton
                    android:id="@+id/btn_loginWith_fb"
                    android:paddingTop="9dp"
                    android:fontFamily="fonts/Roboto-Light"
                    android:paddingBottom="9dp"
                    android:layout_height="45dp"
                    android:layout_width="180dp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btn_signUp_email"
                    android:layout_width="180dp"
                    android:layout_height="45dp"
                    android:text="Sign up with Email"
                    android:textColor="@color/menu_dark_font2"
                    android:fontFamily="fonts/Roboto-Light"
                    android:textAllCaps="false" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_signin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btn_signin"
                    android:layout_width="180dp"
                    android:layout_height="35dp"
                    android:background="@xml/button_effect"
                    android:clickable="true"
                    android:text="Sign In"
                    android:fontFamily="fonts/Roboto-Light"
                    android:textAllCaps="false"
                    android:textColor="@xml/button_textcolor_selector" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_gravity="center">
                <TextView
                    android:id="@+id/tv_disp_privacy_policy"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/textSize_terms_condition"
                    android:ems="18"
                    android:text="@string/terms_condition"
                    android:textColor="@color/my_dark_font"
                    android:layout_width="wrap_content" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
</LinearLayout>