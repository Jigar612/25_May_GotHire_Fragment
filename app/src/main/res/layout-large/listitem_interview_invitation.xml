<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingBottom="10dp"
    android:paddingTop="10dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/lin_interv_invitation"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv2"
                android:layout_width="0dp"
                android:layout_weight="40"
                android:text="Job No"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textSize_LargeHeading"

                android:textColor="@color/font_heading2_color" />
            <TextView
                android:id="@+id/tv_job_no_intv_invi"
                android:layout_width="0dp"
                android:layout_weight="60"
                android:text="--"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:textSize="@dimen/textSize_large_desc"
                android:textColor="@color/font_normal" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv3"
                android:layout_width="0dp"
                android:layout_weight="40"
                android:text="Job Name"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textSize_LargeHeading"
                android:textColor="@color/font_heading2_color" />
            <TextView
                android:id="@+id/tv_job_nm_intv_invi"
                android:layout_width="0dp"
                android:layout_weight="60"
                android:layout_height="wrap_content"
                android:text="--"
                android:textSize="@dimen/textSize_large_desc"
                android:textColor="@color/font_normal" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv4"
                android:layout_width="0dp"
                android:layout_weight="40"
                android:text="Company Name"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textSize_LargeHeading"
                android:textColor="@color/font_heading2_color" />
            <TextView
                android:id="@+id/tv_cpy_nm_intv_invi"
                android:layout_width="0dp"
                android:layout_weight="60"
                android:text="--"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textSize_large_desc"
                android:textColor="@color/font_normal" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv5"
                android:layout_width="0dp"
                android:layout_weight="40"
                android:text="Acceptance Period"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textSize_LargeHeading"
                android:textColor="@color/font_heading2_color" />
            <TextView
                android:id="@+id/tv_accept_period_intv_invi"
                android:layout_width="0dp"
                android:layout_weight="60"
                android:text="--"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textSize_large_desc"
                android:textColor="@color/font_normal" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/line_interv_invi_button"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:weightSum="100"
        android:layout_weight="20"
        android:layout_marginBottom="3dp"
        android:layout_marginTop="7dp"

        android:gravity="center">
        <!--<Button-->
        <!--android:text="Reschedule"-->
        <!--android:id="@+id/btn_reschedule"-->
        <!--android:layout_width="65dp"-->
        <!--android:layout_weight="6"-->
        <!--android:layout_height="30dp"-->
        <!--android:textSize="12dp"-->
        <!--android:textAllCaps="false"-->
        <!--android:textColor="@xml/button_textcolor_selector"-->
        <!--android:background="@xml/button_effect_dark_light"-->
        <!--android:layout_marginRight="5dp"-->

        <!--android:clickable="true" />-->
        <Button
            android:id="@+id/btn_accept"
            android:layout_width="75dp"
            android:layout_height="35dp"
            android:layout_marginRight="5dp"
            android:layout_weight="6"
            android:clickable="true"
            android:text="Accept"
            android:textAllCaps="false"
            android:textColor="@xml/button_textcolor_selector"
            android:background="@xml/button_effect_sky"
            android:textSize="17dp" />

        <Button
            android:text="Reject"
            android:id="@+id/btn_reject"
            android:layout_width="75dp"
            android:layout_weight="6"
            android:layout_height="35dp"
            android:textSize="17dp"
            android:textAllCaps="false"
            android:textColor="@xml/button_textcolor_selector"
            android:background="@xml/button_effect"
            android:clickable="true" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/line_interv_invi_txt_msg"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:visibility="gone"
        android:layout_weight="15"
        android:gravity="center">
        <!--android:layout_weight="15"-->
        <TextView
            android:id="@+id/tv_msg_interview_invi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:textStyle="bold"
            android:textColor="@color/my_orange" />
    </LinearLayout>
</LinearLayout>