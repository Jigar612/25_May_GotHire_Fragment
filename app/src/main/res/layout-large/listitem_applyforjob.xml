<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/linear_listitem_apply_job"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="100"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:background="@xml/list_item_selector">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="19">
            <ImageView
                android:id="@+id/img_cpy_logo_listitem__apply_job"
                android:layout_width="70dp"
                android:layout_height="70dp" />
            <!--android:background="@drawable/ic_2"-->
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="81">
            <TextView
                android:id="@+id/tv_job_nm_apply_job_listitem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="MARKETING MANAGER"
                android:textSize="@dimen/textSize_LargeHeading"

                android:textColor="@color/font_heading2_color" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="11dp">
                <TextView
                    android:id="@+id/tv_cpy_nm_apply_job_listitem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Google inc."
                    android:textSize="@dimen/textSize_large_desc"
                    android:textColor="@color/color_sponsored" />
                <ImageView
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_weight="10"
                    android:layout_alignParentRight="true"
                    android:background="@mipmap/ic_aerrow_right"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="100">
                <TextView
                    android:id="@+id/tv_salary_apply_job_listitem"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="50"
                    android:text="$1000 -$5000"
                    android:textSize="@dimen/textSize_large_desc"
                    android:textColor="@color/color_sponsored" />
                <TextView
                    android:id="@+id/tv_country_apply_job_listitem"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="50"
                    android:text="Vancouver island,British columbia, canada"
                    android:textSize="@dimen/textSize_large_desc2"
                    android:textColor="@color/my_sky_dark" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:gravity="bottom">
        <View
            android:gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:background="@color/my_orange"/>
    </LinearLayout>
</LinearLayout>